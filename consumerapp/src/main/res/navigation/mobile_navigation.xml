<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.consumerapp.ui.home.HomeFragment"
        android:label="Consumer App"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_userDetailFragment2"
            app:destination="@id/userDetailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.consumerapp.ui.favorites.FavoritesFragment"
        android:label="Favorite Users"
        tools:layout="@layout/favorites_fragment">
        <action
            android:id="@+id/action_favoritesFragment_to_userDetailFragment2"
            app:destination="@id/userDetailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/userDetailFragment2"
        android:name="com.example.consumerapp.ui.userdetails.UserDetailFragment"
        android:label="User Info Details"
        tools:layout="@layout/fragment_user_detail">
        <action
            android:id="@+id/action_userDetailFragment2_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
        <argument
            android:name="Item"
            app:argType="com.example.consumerapp.model.Item" />
    </fragment>
</navigation>